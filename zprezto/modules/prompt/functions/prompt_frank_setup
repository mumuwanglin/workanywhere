function prompt_frank_precmd {
  # Replace "/home/<user>" with "~"
  _prompt_frank_pwd="${PWD/#$HOME/~}"
  _prompt_frank_symbol='
>>>'
}

function prompt_frank_setup {
  setopt LOCAL_OPTIONS
  unsetopt XTRACE KSH_ARRAYS
  prompt_opts=(cr percent subst)

  # Load required functions.
  autoload -Uz add-zsh-hook

  # Add hook to call our function before each command
  add-zsh-hook precmd prompt_frank_precmd

  zstyle ':prezto:module:editor:info:completing' format '%F{green}...%f'
  zstyle ':prezto:module:editor:info:keymap:alternate' format '%F{yellow}--- VI-COMMAND ---%f'

  # Define prompts.
  # PROMPT='%(?..%F{red}%B-> [%?]%b%f)
  PROMPT='%F{green}${_prompt_frank_symbol} ${_prompt_frank_pwd}%f $(git_super_status) '
  RPROMPT=
  SPROMPT=
}

prompt_frank_setup "$@"

